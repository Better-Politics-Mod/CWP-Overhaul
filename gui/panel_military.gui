						}
						item = {
							button = {
								visible = "[GetVariableSystem.Exists('showcoverageregions')]"
								size = { 450 40 }
								using = default_button_map_interaction
								parentanchor = hcenter
								direction = vertical
								datacontext = "[Scope.AccessStrategicRegion]"
