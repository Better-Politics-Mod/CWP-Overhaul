							size = { 60 40 }
						}
						button = {
							using = default_button
							text = "60%" # Reject
							enabled = "[Not(EqualTo_CFixedPoint(GetPlayer.MakeScope.Var('nuclear_deployment_percentage').GetValue, '(CFixedPoint)60'))]"
