							text = "Ground Burst" # Reject
							enabled = "[Not(GetPlayer.MakeScope.Var('ground_burst_focus').IsSet)]"
							onclick = "[GetScriptedGui('wmd_nuclear_detonation_focus_ground').Execute( GuiScope.SetRoot(GetPlayer.MakeScope).End)]"
